package riemannSum;

import java.util.Scanner;

import javax.script.ScriptEngine;
import javax.script.ScriptEngineManager;
import javax.script.ScriptException;

public class riemannSum {

	public static void main(String[] args) {
		Scanner kb = new Scanner(System.in);
		ScriptEngineManager mgr = new ScriptEngineManager();
		ScriptEngine engine = mgr.getEngineByName("JavaScript");
		int a, b, n, changeX, xi, answer = 0;
		String fx;
		fx = "1 / x";
		fx.replaceAll("x", "5");
		System.out.print("Enter your function with x as the variable seperated by spaces ex.. (1 / x): ");
		fx = kb.nextLine();
		System.out.println();
		System.out.print("Enter the the first value of your integral partition... (a) ");
		a = kb.nextInt();
		System.out.println();
		System.out.print("Enter the the second value of your integral partition... (b) ");
		b = kb.nextInt();
		System.out.println();
		n = b - a;
		changeX = (b - a)/ n;
		
		for (int i = 0; i < n; i++) {
			String fxTemp = fx;
			xi = a + (i * changeX);
			fxTemp.replaceAll("x", Integer.toString(xi));
			try {
				answer += (int) engine.eval(fxTemp);
			} catch (ScriptException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
}
