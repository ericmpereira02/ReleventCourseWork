import java.io.IOException;
import java.nio.file.DirectoryStream;
import java.nio.file.FileSystems;
import java.nio.file.Path;
import java.nio.file.Files;
import java.nio.file.Paths;

public class FindInDirectory {
	
	public static void getFileName(String directory, String searchTerm) {
		
		try (DirectoryStream<Path> ds = Files.newDirectoryStream(FileSystems.getDefault().getPath(directory))) {
		    for (Path p: ds){
		    	if (Files.isDirectory(p))
			    	getFileName(p.toString(), searchTerm);
		    	else if (p.toString().contains(searchTerm)) {
		    		System.out.println(p);
		    	}
		    }
		} catch (IOException e) {
		   e.printStackTrace();
		}
	}

	public static void main (final String[] args) {
		
		String directory = args[0];
		String searchTerm = args[1];
		
		getFileName(directory, searchTerm);

	}
}
